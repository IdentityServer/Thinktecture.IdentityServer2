@using Thinktecture.IdentityServer.Web.Areas.Admin.App_LocalResources.User
@model Thinktecture.IdentityServer.Web.Areas.Admin.ViewModels.UserPasswordModel

@{
    ViewBag.Title = string.Format(ChangePassword_cshtml.ChangePasswordFor,  Model.Username);
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(ChangePassword_cshtml.ErrorUpdatingProfile)
    @Html.AntiForgeryToken()

    <fieldset class="editor small">
        <legend>@ViewBag.Title</legend>

        @Html.EditorForModel()
        
        <div class="buttons">
            <button>@ChangePassword_cshtml.Update</button>
        </div>
    </fieldset>
}